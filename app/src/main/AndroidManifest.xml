        <service
            android:name=".limelight.discovery.DiscoveryService"
            android:label="mDNS PC Auto-Discovery Service" />
        <service
            android:name=".limelight.computers.ComputerManagerService"
            android:label="Computer Management Service" />
        <service
            android:name=".limelight.binding.input.driver.UsbDriverService"
            android:label="Usb Driver Service" />

