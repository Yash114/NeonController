<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#aa000000"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/stroke_rounded_rect_white"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="32dp"
            android:fadeScrollbars="false"
            android:paddingTop="16dp"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            android:scrollbarAlwaysDrawVerticalTrack="true"

            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald_medium"
                    android:paddingHorizontal="32dp"
                    android:text="Layout Title"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:background="@drawable/stroke_rounded_rect"
                    android:fontFamily="@font/oswald_medium"
                    android:hint="Edit Title Here"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textAutoComplete"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:textColor="@color/primary"
                    android:textColorHint="#44F0E9D2"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/oswald_medium"
                    android:paddingHorizontal="32dp"
                    android:text="Layout Description"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/stroke_rounded_rect"
                    android:fontFamily="@font/oswald_medium"
                    android:hint="Edit Description Here"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textAutoComplete"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:textColor="@color/primary"
                    android:textColorHint="#44F0E9D2"
                    android:textSize="18sp" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="32dp"
                    android:paddingTop="16dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oswald_medium"
                        android:lines="1"
                        android:text="Enable Mouse Trackpad:"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <com.gingertech.starbeam.helpers.controllers.mCheckBox
                        android:id="@+id/mouseTrackpad"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/black"
                        android:padding="2dp"
                        app:checkboxCheckable="true" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/dm_mono"
                    android:paddingHorizontal="40dp"
                    android:text="Enable to move the mouse's relative position. Disable to move the mouse's absolute position "
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="32dp"
                    android:paddingTop="16dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oswald_medium"
                        android:lines="1"
                        android:text="Enable Trackpad Click:"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <com.gingertech.starbeam.helpers.controllers.mCheckBox
                        android:id="@+id/mouseClick"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/black"
                        android:padding="2dp"
                        app:checkboxCheckable="true" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/dm_mono"
                    android:paddingHorizontal="40dp"
                    android:text="Disable to remove mouse clicks on trackpad (You will need a click button to perform a mouse click)"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="visible" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="32dp"
                    android:paddingTop="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oswald_medium"
                        android:text="Touch Screen Sensitivity:"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <com.google.android.material.slider.Slider
                        android:id="@+id/touchSense"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="16dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_mono"
                    android:paddingHorizontal="40dp"
                    android:text="Adjust the sensitivity of your touch screen trackpad"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:translationY="-8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="32dp"
                    android:paddingTop="16dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oswald_medium"
                        android:lines="1"
                        android:text="Keyboard Touch Control:"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <com.gingertech.starbeam.helpers.controllers.mCheckBox
                        android:id="@+id/touchMouse"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/black"
                        android:padding="2dp"
                        app:checkboxCheckable="true" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/dm_mono"
                    android:paddingHorizontal="40dp"
                    android:text="Enable to control your mouse using the touchscreen. Disable to control right Xbox joystick."
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="32dp"
                    android:paddingTop="16dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oswald_medium"
                        android:lines="1"
                        android:text="Use Split Touch Screen:"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <com.gingertech.starbeam.helpers.controllers.mCheckBox
                        android:id="@+id/useSplitTouch"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/black"
                        android:padding="2dp"
                        app:checkboxCheckable="true" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/dm_mono"
                    android:paddingHorizontal="40dp"
                    android:text="Enable to activate split touch screen mode. Enables motion and camera controls using the back touchscreen."
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/swapTouchscreenControls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="32dp"
                        android:paddingTop="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/oswald_medium"
                            android:lines="1"
                            android:text="Swap Touchscreen Controls"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <com.gingertech.starbeam.helpers.controllers.mCheckBox
                            android:id="@+id/swapTouchscreenControlsToggle"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="8dp"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/black"
                            android:padding="2dp"
                            app:checkboxCheckable="true" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/dm_mono"
                        android:paddingHorizontal="40dp"
                        android:text="Disabled: right touchscreen controls (Mouse|Xbox Right Joystick).\nEnabled: right side controls (W:A:S:D|Xbox Left Joystick) "
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="18sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Left Touch Area"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:fontFamily="@font/oswald_medium"/>

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/leftTextArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="32dp"
                            android:background="@drawable/stroke_rounded_rect"
                            android:completionThreshold="0"
                            android:fontFamily="@font/oswald_medium"
                            android:hint="Ex: W:A:S:D"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="textAutoComplete"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:textColor="@color/primary"
                            android:textColorHint="#44F0E9D2"
                            android:textAlignment="center"
                            android:textSize="16sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="18sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/oswald_medium"
                            android:text="Right Touch Area"
                            android:textAlignment="center"
                            android:textColor="@color/black" />

                        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                            android:id="@+id/rightTextArea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="32dp"
                            android:background="@drawable/stroke_rounded_rect"
                            android:completionThreshold="0"
                            android:fontFamily="@font/oswald_medium"
                            android:hint="Ex: MOUSE"
                            android:imeOptions="flagNoExtractUi"
                            android:inputType="textAutoComplete"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:textColor="@color/primary"
                            android:textColorHint="#44F0E9D2"
                            android:textAlignment="center"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_marginTop="16dp"
                    android:layout_width="16dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="32dp"
                    android:paddingTop="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oswald_medium"
                        android:lines="1"
                        android:text="Enable Motion Controls:"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <com.gingertech.starbeam.helpers.controllers.mCheckBox
                        android:id="@+id/gyro"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/black"
                        android:padding="2dp"
                        app:checkboxCheckable="true" />


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_mono"
                    android:paddingHorizontal="40dp"
                    android:text="Control your PC using motion controls."
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/gyroStuff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="32dp"
                        android:paddingTop="16dp">

                        <TextView
                            android:id="@+id/gyroSenseText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/oswald_medium"
                            android:text="Gyroscope Sensitivity:"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/gyroSense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="16dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_mono"
                        android:paddingHorizontal="40dp"
                        android:text="Change the sensitivity of gyroscope control"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:translationY="-8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="32dp"
                        android:paddingTop="16dp">

                        <TextView
                            android:id="@+id/gyroThreshText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/oswald_medium"
                            android:text="Gyroscope Threshold:"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/gyroThresh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="16dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_mono"
                        android:paddingHorizontal="40dp"
                        android:text="Change the minimum required movement for gyroscope"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:translationY="-8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="32dp"
                        android:paddingTop="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/oswald_medium"
                            android:lines="1"
                            android:text="Mouse Gyro Control:"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <com.gingertech.starbeam.helpers.controllers.mCheckBox
                            android:id="@+id/gyroMouse"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="8dp"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/black"
                            android:padding="2dp"
                            app:checkboxCheckable="true" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_mono"
                        android:paddingHorizontal="40dp"
                        android:text="Enable to control your mouse using gyro. Disable to control right Xbox joystick."
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="32dp"
                        android:paddingTop="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/oswald_medium"
                            android:lines="1"
                            android:text="Invert Gyro:"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <com.gingertech.starbeam.helpers.controllers.mCheckBox
                            android:id="@+id/invertGyro"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginHorizontal="8dp"
                            android:background="@drawable/circle"
                            android:backgroundTint="@color/black"
                            android:padding="2dp"
                            app:checkboxCheckable="true" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_mono"
                        android:paddingHorizontal="40dp"
                        android:text="Enable to invert gyro movement."
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>


                <TextView
                    android:id="@+id/ShareControllerButton"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="32dp"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/stroke_rounded_rect_comp"
                    android:fontFamily="@font/oswald_medium"
                    android:lines="1"
                    android:paddingHorizontal="16dp"
                    android:text="Share Controller"
                    android:textColor="@color/primary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/LayoutIDView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/oswald_medium"
                    android:lines="1"
                    android:paddingHorizontal="16dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textIsSelectable="true"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_mono"
                    android:paddingHorizontal="40dp"
                    android:text="Generate a code that can be used to share your layout and all its dependencies (imanges, code, etc) with others."
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="32dp" />

            </LinearLayout>


        </ScrollView>

        <ImageView
            android:id="@+id/exit"
            android:layout_margin="8dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/close"
            app:tint="@color/black" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/down"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/scrollView"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>