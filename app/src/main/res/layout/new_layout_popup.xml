<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#99000000"
    android:clickable="true">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="48dp"
        android:background="@drawable/stroke_rounded_rect_white"
        app:layout_constraintDimensionRatio="w,1:1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/xbutton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/close"
            app:tint="@color/backcolor"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Layout"
            android:textSize="36sp"
            android:fontFamily="@font/oswald_medium"
            android:textColor="@color/backcolor"

            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginBottom="8dp"
            android:paddingHorizontal="32dp"
            android:textAlignment="center" />


        <EditText
            android:id="@+id/layout_name"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Title"
            android:fontFamily="@font/oswald_medium"
            android:background="@drawable/stroke_rounded_rect"
            android:layout_marginHorizontal="16dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:textColorHint="@color/grey"
            android:textColor="@color/primary"
            android:lines="1"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/layout_descritp"
            app:layout_constraintTop_toBottomOf="@id/layout_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Description"
            android:fontFamily="@font/oswald_medium"
            android:background="@drawable/stroke_rounded_rect"
            android:layout_marginHorizontal="16dp"
            android:paddingVertical="4dp"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="8dp"
            android:textColorHint="@color/grey"
            android:textColor="@color/primary"
            android:imeOptions="actionDone"
            android:lines="1"
            android:textSize="16sp" />


        <TextView
            android:layout_gravity="center"
            android:id="@+id/createButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Create Layout"
            android:fontFamily="@font/oswald_medium"
            android:textSize="24sp"
            android:paddingHorizontal="16dp"
            android:textColor="@color/secondary"
            android:paddingBottom="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <TextView
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/createGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Create Layout Group"
            android:fontFamily="@font/oswald_medium"
            android:textSize="12sp"
            android:paddingHorizontal="16dp"
            android:textColor="@color/white"
            android:layout_marginBottom="24dp"
            android:background="@drawable/basic_black_border"
            android:paddingBottom="2dp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>