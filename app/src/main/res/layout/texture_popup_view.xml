<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#aa000000"
    android:clickable="true"
    android:focusable="true">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/stroke_rounded_rect_white"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:fadeScrollbars="false"

        >

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
            android:id="@+id/exitTextureButton"
            android:layout_margin="8dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/close"
            app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Button Texture"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"

                android:fontFamily="@font/oswald_medium"
                android:textSize="18sp"
                android:textColor="@color/black"/>

        <TextView
            android:id="@+id/applyTextureButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Apply"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"

            android:fontFamily="@font/oswald_medium"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Image"
                    android:textColor="@color/black"
                    android:fontFamily="@font/oswald_medium"/>

                <ImageView
                    android:id="@+id/sampleImageView"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/ic_button"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/exitColorButton"
                    android:layout_gravity="center"
                    android:background="@drawable/basic_black_border"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toTopOf="@id/textView2"
                    app:layout_constraintTop_toBottomOf="@id/imageView">

                    <TextView
                        android:id="@+id/multiplyButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/oswald_medium"

                        android:text="Multiply Tint"

                        android:textAlignment="center"
                        android:textColor="@color/secondary"
                        android:textSize="12sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/tintToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/screenButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/oswald_medium"

                        android:text="Screen Tint"

                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>


            <com.gingertech.starbeam.helpers.controllers.ColorSliderController
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:id="@+id/color_selector" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/dm_mono"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"
            android:text="Change the image by clicking on the button. Change the color by adjusting the color sliders. Change tint mode by clicking multiply or screen. Click apply when done." />

        <TextView
            android:id="@+id/resetTextureButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="RESET"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="16dp"

            android:fontFamily="@font/oswald_medium"
            android:textSize="18sp"
            android:textColor="@color/red"/>

    </LinearLayout>

    </ScrollView>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/down"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/scrollView"/>

</androidx.constraintlayout.widget.ConstraintLayout>