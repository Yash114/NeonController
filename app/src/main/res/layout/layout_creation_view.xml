<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/splitScreenMode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="8dp">
        <TextView
            android:id="@+id/leftSide"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_border"
            android:alpha="0.2"
            android:gravity="center"
            android:text="W:A:S:D AREA"
            android:textColor="@color/primary"
            android:textSize="48sp"
            android:fontFamily="@font/oswald_medium"/>

        <TextView
            android:id="@+id/rightSide"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_border"
            android:alpha="0.2"
            android:gravity="center"
            android:text="MOUSE AREA"
            android:textColor="@color/primary"
            android:textSize="48sp"
            android:fontFamily="@font/oswald_medium"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container">

        <TextView
            android:id="@+id/RemainingButtonsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Remaining Buttons: 10"
            android:layout_centerInParent="true"
            android:fontFamily="@font/oswald_regular"
            android:textColor="@color/primary"
            android:layout_marginTop="16dp"/>

        <RelativeLayout
            android:id="@+id/layoutLoading"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#66000000">

            <ProgressBar
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/primary" />

        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/buttonDrawerToggle"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/left_icon"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/buttonDrawer"
        android:layout_marginLeft="8dp"

        app:tint="@color/secondary"
        android:background="@drawable/circle"
        android:backgroundTint="@color/primary"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        >

        <com.gingertech.starbeam.helpers.controllers.TextWithImage
            android:layout_marginTop="16dp"
            android:id="@+id/launch_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconImg="@drawable/play_icon"
            app:iconText="@string/play"
            app:iconTint="@color/secondary"
            android:paddingBottom="16dp"/>

        <com.gingertech.starbeam.helpers.controllers.TextWithImage
            android:layout_marginTop="16dp"
            android:id="@+id/test_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconImg="@drawable/game_icon"
            app:iconText="@string/test"
            app:iconTint="@color/yellow"
            android:visibility="gone"/>

        <com.gingertech.starbeam.helpers.controllers.TextWithImage
            android:layout_marginTop="16dp"
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconImg="@drawable/folder_icon"
            app:iconText="@string/save"
            app:iconTint="@color/primary"/>

        <ImageView
            android:id="@+id/close_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/cancel_icon"
            app:tint="@color/red"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="16dp">


        <com.gingertech.starbeam.helpers.controllers.TextWithImage
            android:id="@+id/infoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconImg="@drawable/info"
            app:iconText="@string/info"/>

        <com.gingertech.starbeam.helpers.controllers.TextWithImage
            android:id="@+id/keybindButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconText="@string/edit"
            app:iconImg="@drawable/keyboard_icon" />

        <com.gingertech.starbeam.helpers.controllers.TextWithImage
            android:id="@+id/textureButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconImg="@drawable/color_icon"
            app:iconText="@string/texture"
            app:iconTint="@color/primary"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/basic_black_border"

        android:paddingVertical="10dp">


        <com.gingertech.starbeam.helpers.controllers.TextWithImage
            android:id="@+id/trashButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconImg="@drawable/trash_icon"
            app:iconTint="@color/red"
            app:iconText="@string/delete"
            android:alpha="0.3"

            android:layout_marginHorizontal="8dp"/>

        <com.gingertech.starbeam.helpers.controllers.TextWithImage
            android:visibility="visible"
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconImg="@drawable/reset_icon"
            app:iconTint="@color/primary"
            app:iconText="@string/reset"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/trashButton"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingEnd="96dp"
        android:paddingVertical="10dp"
        android:background="@drawable/basic_black_border">

        <com.gingertech.starbeam.helpers.controllers.TextWithImage
            android:id="@+id/optionsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:iconImg="@drawable/options_icon"
            app:iconText="Settings"
            app:iconTint="@color/primary" />

    </LinearLayout>


    <com.gingertech.starbeam.helpers.controllers.DrawerController_CreateLayout
        android:id="@+id/buttonDrawer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <include
        android:visibility="gone"
        android:id="@+id/keybindPopup"
        layout="@layout/keybind_popup_view"
        android:elevation="16dp"/>

    <include
        android:visibility="gone"
        android:id="@+id/infoPopup"
        layout="@layout/info_popup_view"
        android:elevation="16dp"/>

    <include
        android:visibility="gone"
        android:id="@+id/imagePopup"
        layout="@layout/texture_popup_view"
        android:elevation="16dp"/>

    <include
        android:visibility="gone"
        android:id="@+id/resetPopup"
        layout="@layout/reset_popup"
        android:elevation="16dp"/>

    <include
        android:visibility="gone"
        android:id="@+id/deleteButtonPopup"
        layout="@layout/delete_button_popup"/>

    <include
        android:visibility="gone"
        android:id="@+id/settingPopup"
        layout="@layout/settings_popup"
        android:elevation="16dp"/>

    <include
        android:visibility="gone"
        android:id="@+id/closePopup"
        layout="@layout/exit_popup"/>

</androidx.constraintlayout.widget.ConstraintLayout>
