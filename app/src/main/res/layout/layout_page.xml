<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="8dp">

        <EditText
            android:id="@+id/layoutID"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:hint="Controller ID... "
            android:maxLines="1"
            android:inputType="text"
            android:fontFamily="@font/dm_mono"
            android:textColor="@color/primary"
            android:textColorHint="@color/primary"
            android:textColorHighlight="@color/primary"
            android:textSize="12sp"
            android:scrollHorizontally="true"
            />


        <TextView
            android:id="@+id/layoutImport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Import"
            android:paddingHorizontal="16dp"
            android:paddingVertical="2dp"
            android:textSize="12sp"
            android:fontFamily="@font/oswald_medium"
            android:background="@drawable/stroke_rounded_rect_comp"
            android:textColor="@color/primary"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/editButton"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/pencil_icon"
                android:layout_marginTop="2dp"

                app:tint="@color/black"
                android:clickable="false"
                android:focusable="false"

                android:padding="4dp"
                android:background="@drawable/circle"
                android:elevation="8dp"
                android:layout_marginHorizontal="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit/View"
                android:fontFamily="@font/oswald_medium"
                android:textColor="@color/primary"
                android:elevation="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/playButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/play_icon"
                android:layout_marginTop="2dp"

                app:tint="@color/primary"
                android:clickable="false"
                android:focusable="false"

                android:padding="2dp"
                android:background="@drawable/circle"
                android:elevation="8dp"
                android:backgroundTint="@color/secondary"
                android:layout_marginHorizontal="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:fontFamily="@font/oswald_medium"
                android:textColor="@color/secondary"
                android:elevation="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:id="@+id/deleteButton"
            >
            <ImageView
                android:id="@+id/launch_button"

                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/trash_icon"
                android:layout_marginTop="2dp"

                app:tint="@color/red"
                android:clickable="false"
                android:focusable="false"

                android:padding="3dp"
                android:background="@drawable/circle"
                android:elevation="8dp"
                android:layout_marginHorizontal="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:fontFamily="@font/oswald_medium"
                android:textColor="@color/primary"
                android:elevation="8dp"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/middleGuide"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


    <com.gingertech.starbeam.helpers.controllers.ListViewController
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/recycleView"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@+id/middleGuide"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingVertical="64dp"
        android:paddingHorizontal="32dp"
        android:translationY="-128dp"
        />


    <com.gingertech.starbeam.helpers.controllers.PopupController
        android:visibility="gone"
        android:id="@+id/createPopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <include
        android:id="@+id/deletePopup"
        android:visibility="gone"
        layout="@layout/delete_popup"/>

</androidx.constraintlayout.widget.ConstraintLayout>

