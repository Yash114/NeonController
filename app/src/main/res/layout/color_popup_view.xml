<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#aa000000"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginVertical="32dp"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/stroke_rounded_rect_white">

        <ImageView
            android:id="@+id/exitColorButton"
            android:layout_margin="8dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/close"
            app:tint="@color/black" />

        <TextView
            android:id="@+id/applyColorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="APPLY"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"

            android:fontFamily="@font/oswald_medium"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <com.flask.colorpicker.ColorPickerView
            android:id="@+id/colorPickerView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exitColorButton"
            app:wheelType="FLOWER"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/textView2"
            app:layout_constraintTop_toBottomOf="@id/colorPickerView"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_weight="1"
                android:id="@+id/multiplyButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"

                android:text="Multiply Tint"

                android:fontFamily="@font/oswald_medium"
                android:textSize="18sp"
                android:textColor="@color/secondary"
               />

            <TextView
                android:layout_weight="1"
                android:id="@+id/screenButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"

                android:text="Screen Tint"

                android:fontFamily="@font/oswald_medium"
                android:textSize="18sp"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/dm_mono"
            android:layout_marginBottom="32dp"
            android:text="Click on a color to tint the selected button. Different images require different tint modes so choose either multiply tint or screen tint to achieve the desired color. Click on apply when done." />

        <TextView
            android:id="@+id/resetColorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="RESET"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"

            android:fontFamily="@font/oswald_medium"
            android:textSize="18sp"
            android:textColor="@color/red"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>