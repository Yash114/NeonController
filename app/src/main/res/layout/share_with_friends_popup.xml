<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#aa000000"
    android:layout_gravity="center">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="48dp"
        android:background="@drawable/stroke_rounded_rect_white"
        app:layout_constraintDimensionRatio="w,1:1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/close"
            android:layout_gravity="start"
            app:tint="@color/black"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Computer?"
            android:fontFamily="@font/oswald_regular"
            android:textSize="24dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Try Neon Arcade!"
            android:fontFamily="@font/oswald_medium"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:translationY="-16dp"
            android:paddingBottom="16dp"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent time on other people's computer to play games! Submit your email to get notified of the release."
            android:fontFamily="@font/dm_mono"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:translationY="-16dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/darker_rounded_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:hint="Email..."
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/submitEmail"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Email"
            android:fontFamily="@font/oswald_regular"
            android:textSize="24dp"
            android:textColor="@color/primary"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:background="@drawable/stroke_rounded_rect_white"
            android:backgroundTint="@color/secondary"

            android:layout_marginBottom="24dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>