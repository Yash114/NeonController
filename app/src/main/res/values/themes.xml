<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Starbeam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorPrimaryVariant">@color/secondary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:textColor">@color/secondary</item>

        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="android:textColorTertiary">@color/secondary</item>


        <!--        <item name="android:fontFamily">@font/dm_mono</item>-->


        <!-- Customize your theme here. -->
    </style>


    <style name="PreferenceStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:titleTextColor">@color/primary</item>
    </style>

    <style name="AlertDialogBodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="StreamBaseTheme" parent="Theme.Starbeam">
        <!-- Transparent streaming background to avoid extra overdraw -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="StreamTheme" parent="StreamBaseTheme">
        <item name="android:windowLayoutInDisplayCutoutMode">
            shortEdges
        </item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>